@model List<_3.RANDEVU_YAPISIM.Models.Hasta>

@{
    ViewData["Title"] = "Hasta Yönetimi";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger">Hasta Yönetimi</h2>
    <hr />

    <div class="alert alert-light border d-flex justify-content-between align-items-center">
        <span><strong>Toplam Hasta:</strong> @Model.Count</span>
        <span class="text-muted">Yönetim ekranı (listeleme)</span>
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:80px;">Id</th>
                <th>Ad Soyad</th>
                <th>E-Posta</th>
                <th style="width:140px;">Rol</th>
                <th style="width:110px;">Durum</th>
                <th style="width:170px;">İşlem</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var h in Model)
            {
                var rolText = string.IsNullOrWhiteSpace(h.Role) ? "Hasta" : h.Role;
                bool aktifMi = h.Aktif;

                <tr>
                    <td>@h.Id</td>
                    <td>@h.AdSoyad</td>
                    <td>@h.Email</td>
                    <td>@rolText</td>

                    <td>
                        @if (aktifMi)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>

                    <td>
                        @if (aktifMi)
                        {
                            <button class="btn btn-warning btn-sm js-pasif"
                                    data-id="@h.Id">
                                Pasife Al
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-success btn-sm js-aktif"
                                    data-id="@h.Id">
                                Aktif Et
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener("click", async (e) => {

            // PASİF YAP
            const pasifBtn = e.target.closest(".js-pasif");
            if (pasifBtn) {
                const id = pasifBtn.dataset.id;

                if (!confirm("Hastayı pasif yapmak istiyor musunuz?"))
                    return;

                const res = await fetch(`/api/admin/hastalar/${id}/pasif`, {
                    method: "POST",
                    credentials: "same-origin"
                });

                if (!res.ok) {
                    alert("Pasif yapılamadı");
                    return;
                }

                location.reload();
            }

            // AKTİF YAP
            const aktifBtn = e.target.closest(".js-aktif");
            if (aktifBtn) {
                const id = aktifBtn.dataset.id;

                if (!confirm("Hastayı tekrar aktif yapmak istiyor musunuz?"))
                    return;

                const res = await fetch(`/api/admin/hastalar/${id}/aktif`, {
                    method: "POST",
                    credentials: "same-origin"
                });

                if (!res.ok) {
                    alert("Aktif yapılamadı");
                    return;
                }

                location.reload();
            }
        });
    </script>
}
