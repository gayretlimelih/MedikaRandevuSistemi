@model List<_3.RANDEVU_YAPISIM.Models.AdminRandevuVM>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<div class="container mt-5">
    <h2 class="text-success fw-bold mb-3">Randevu Yönetimi</h2>
    <p class="text-muted">Tüm randevular sistem üzerinden listelenir.</p>

    <div class="card shadow-sm">
        <div class="card-body">
            <p><strong>Toplam Randevu:</strong> @Model.Count</p>

            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Doktor</th>
                        <th>Branş</th>
                        <th>Hasta</th>
                        <th>E-Posta</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.DoktorAdSoyad</td>
                            <td>@r.Brans</td>
                            <td>@r.HastaAdSoyad</td>
                            <td>@r.HastaEmail</td>
                            <td>@r.Tarih.ToString("dd.MM.yyyy")</td>
                            <td>@r.Saat</td>
                            <td>
                                @if (r.Durum == "İptal")
                                {
                                    <span class="badge bg-danger">İptal</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                            </td>
                            <td>
                                @if (r.Durum != "İptal")
                                {
                                    <form asp-action="RandevuIptal" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@r.Id" />
                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                onclick="return confirm('Bu randevuyu iptal etmek istiyor musunuz?');">
                                            İptal Et
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
