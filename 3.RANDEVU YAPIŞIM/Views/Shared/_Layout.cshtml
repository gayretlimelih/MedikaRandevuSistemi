@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MEDİKA</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- 🔹 NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4 text-white" href="/">🩺 MEDİKA</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <li class="nav-item">
                        <a class="nav-link text-white" href="/">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home/RandevuAl">Randevu Al</a>
                    </li>

                    @{
                        var kullanici = HttpContextAccessor.HttpContext.Session.GetString("KullaniciAdi");
                    }

                    @if (!string.IsNullOrEmpty(kullanici))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-white fw-bold">👤 @kullanici</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Account/Logout">Çıkış Yap</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Account/Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" href="/Account/Register">Kayıt Ol</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🔹 ANA İÇERİK -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- 🔹 ALT BİLGİ -->
    <footer class="bg-primary text-white text-center py-3 mt-auto">
        <p class="mb-0">© @DateTime.Now.Year MEDİKA | Tüm Hakları Saklıdır</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
